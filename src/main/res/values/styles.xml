<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme" tools:ignore="ResourceName">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 此主题作用与MainActivity上为了避免SwipeLayout和windowIsTranslucent属性一起使用造成的效率问题 -->
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceName">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
</resources>
